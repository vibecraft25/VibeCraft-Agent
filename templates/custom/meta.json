{
  "type": "custom",
  "name": "Custom Visualization",
  "description": "사용자 정의 시각화 템플릿",
  "requiredLibraries": ["recharts", "d3", "react-table"],
  "systemPrompt": "Create a custom visualization based on the user's specific requirements. Be flexible and creative in combining different visualization techniques.",
  "componentStructure": {
    "mainComponents": [
      {
        "name": "CustomVisualization",
        "description": "Flexible visualization component",
        "props": [
          { "name": "data", "type": "any[]" },
          { "name": "config", "type": "VisualizationConfig" },
          { "name": "onInteraction", "type": "(event: InteractionEvent) => void" }
        ],
        "features": ["dynamic-rendering", "multiple-views", "custom-interactions"]
      },
      {
        "name": "DataExplorer",
        "description": "Data exploration interface",
        "props": [
          { "name": "schema", "type": "DataSchema" },
          { "name": "onQueryChange", "type": "(query: Query) => void" }
        ],
        "features": ["query-builder", "preview", "suggestions"]
      },
      {
        "name": "VisualizationBuilder",
        "description": "Visual configuration builder",
        "props": [
          { "name": "availableCharts", "type": "ChartType[]" },
          { "name": "onConfigChange", "type": "(config: VisualizationConfig) => void" }
        ],
        "features": ["drag-drop", "live-preview", "templates"]
      }
    ],
    "supportingComponents": [
      {
        "name": "ChartGallery",
        "description": "Gallery of available chart types",
        "props": [
          { "name": "charts", "type": "ChartOption[]" },
          { "name": "onSelect", "type": "(chart: ChartOption) => void" }
        ],
        "features": ["previews", "recommendations", "search"]
      },
      {
        "name": "InsightPanel",
        "description": "Automated insights generation",
        "props": [
          { "name": "data", "type": "any[]" },
          { "name": "insights", "type": "Insight[]" }
        ],
        "features": ["auto-insights", "annotations", "explanations"]
      }
    ],
    "hooks": [
      {
        "name": "useCustomData",
        "description": "Hook for flexible data fetching and processing"
      },
      {
        "name": "useVisualizationEngine",
        "description": "Hook for dynamic visualization rendering"
      }
    ],
    "utils": [
      {
        "name": "dataAnalysis",
        "description": "Data analysis and insight generation"
      },
      {
        "name": "chartRecommendation",
        "description": "Recommend appropriate chart types"
      }
    ]
  },
  "dataProcessingPatterns": [
    {
      "name": "Flexible Query",
      "sqlTemplate": "{{customQuery}}",
      "dataTransformation": "processCustomData(results, config)"
    },
    {
      "name": "Auto Analysis",
      "sqlTemplate": "SELECT * FROM {{table}} LIMIT 1000",
      "dataTransformation": "analyzeDataStructure(results)"
    }
  ]
}